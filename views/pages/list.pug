extend ../layout.pug
block content
	.container
		.row
			table.table.table-bordered.table-hover
				thead
					tr
						th 电影名字
						th 导演
						th 国家
						th 上映时间
						th 语言
						th 更新时间
						th 查看
						th 更新
						th 删除
				tbody
				each item in movies
					tr(class="item-id-"+item._id)
						th #{item.title}
						th #{item.director}
						th #{item.country}
						th #{item.year}
						th #{item.language}
						th #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
						th
							a(href="/movie/"+item._id) 查看
						th
							a(href="/admin/update/"+item._id) 更新
						th
							button.btn.btn-danger.del(role="button", data-id=item._id) 删除
	script(src="/admin.js")